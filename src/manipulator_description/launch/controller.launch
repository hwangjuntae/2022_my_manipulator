<launch>
  <!-- Load controller configuration -->
  <rosparam file="$(find manipulator_description)/launch/controller.yaml" command="load"/>

  <!-- Spawn joint controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" ns="manipulator"
        args="Revolute 48_position_controller Revolute 50_position_controller Revolute 52_position_controller
              Revolute 54_position_controller Revolute 56_position_controller Revolute 59_position_controller joint_state_controller"/>

  <!-- Start robot state publisher -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
    <remap from="/joint_states" to="/manipulator/joint_states"/>
  </node>

  <!-- Start joint control UI -->
  <node name="joint_control_ui" pkg="manipulator_description" type="joint_control_ui.py" respawn="false" output="screen"/>
</launch>
